@model DAL.Models.TodoTask
@{
    ViewBag.Title = "Create";
}

<form asp-action="MyTasks" asp-controller="ToDoTask" method="post">
    <div class="form-group col-6">
        <label>TaskContent</label>
        <input type="text" asp-for="TaskContent" class="form-control"/>
        <span class="text-danger" asp-validation-for="TaskContent"></span> 
    </div>

    <div class="col-4">
        <input class="form-control" type="date" name="TaskDateTime" value="@Model.TaskDateTime.ToString("yyyy-MM-dd")" />
    </div>
     
    <div class="form-group" style="margin:15px">
        <button type="submit" class="btn btn-success">Add</button>
    </div>
</form>